<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="余额："
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="￥"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_g_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="30000"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:gravity="right"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#77A400"
                android:layout_width="wrap_content"
                android:text="+"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_g_money"
                android:textColor="#77A400"
                android:background="@null"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:text="1440"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_tip_mouth"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="汇缴月份："
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_g_mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="2021-12"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:textColor="#BE1D3E"
            android:background="@null"
            android:layout_width="fill_parent"
            android:text="-0"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="业务发生日期："
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_g_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="2021-12-30"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/et_tip_info"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_width="fill_parent"
            android:text="汇缴"
            android:gravity="right"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:text="缴款单位："
            android:textSize="16sp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="北京欢喜向日葵科技有限公司"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>